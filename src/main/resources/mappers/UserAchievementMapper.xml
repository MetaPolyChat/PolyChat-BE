<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.polychat.polychatbe.userAchievement.query.dto">
    <resultMap id="userAchievementMap" type="UserInterestDTO">
        <id property="userAchievementId" column="user_achievement_id"/>
        <result property="userNo" column="user_no"/>
        <result property="achievementId" column="achievement_id"/>
    </resultMap>

    <select id="findUserAchievementById" resultMap="userAchievement" parameterType="long">
        SELECT
                A.userAchievementMap
             ,
        A.user_no,
        A.interest_no
        FROM
        tbl_user_interest as A

        <if test="userName != null and userName != ''">
            WHERE
            A.user_no = (SELECT B.user_no FROM tbl_user as B WHERE B.user_id = #{ userId })
        </if>
    </select>

    <select id="findOneUserAchievements" resultMap="userAchievementMap" parameterType="_long">
        SELECT
                A.id
              , A.achievement_id,
              , A.user_id
        A.user_no,
        A.interest_no
        FROM
        tbl_user_interest as A

        <if test="interestName != null and interestName != ''">
            WHERE
            A.interest_no = (SELECT B.interest_no FROM tbl_interest as B WHERE B.interest_name = #{ interestName })
        </if>
    </select>

